{
  "name": "root",
  "private": true,
  "version": "1.5.0",
  "license": "UNLICENSED",
  "author": "@LiveRamp/ax",
  "keywords": [
    "harness",
    "harness-error",
    "harness-debug",
    "root-config"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "pnpm --filter @liveramp/* build",
    "lint": "eslint applications/**/src --ext js,ts,tsx",
    "test": "pnpm -r test",
    "start": "pnpm --filter @liveramp/harness start",
    "start-local": "./local-development/start-local-development.sh",
    "start-nav": "pnpm --filter @liveramp/harness-nav start"
  },
  "dependencies": {
    "welcome": "./applications/welcome",
    "nav": "./applications/debug"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --write"
    ]
  }
}
